<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/autocomplete_selector" android:orientation="horizontal"
    android:padding="5dp">
    <com.teamboid.twitter.views.NetworkedCacheableImageView android:id="@+id/image" android:layout_width="32dp"
        android:layout_height="32dp" android:layout_gravity="center_vertical" android:layout_marginRight="5dp"
        android:src="@drawable/sillouette" />
    <TextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="?tweetColor" android:layout_gravity="center_vertical" />
</LinearLayout>