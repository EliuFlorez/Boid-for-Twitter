<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/feedItemMediaFrame"
        android:layout_marginTop="5dp" android:paddingBottom="5dp"
        android:layout_width="fill_parent" android:layout_height="120dp"
        android:layout_below="@+id/feedItemText" android:visibility="gone">
    <com.teamboid.twitter.views.NetworkedCacheableImageView android:id="@+id/feedItemMediaPreview"
                                                            android:scaleType="centerCrop"
                                                            android:layout_width="fill_parent"
                                                            android:layout_height="match_parent"/>
    <ProgressBar android:id="@+id/feedItemMediaProgress"
                 android:padding="5dp"
                 android:layout_centerInParent="true" android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
</RelativeLayout>